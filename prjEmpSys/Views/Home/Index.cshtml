@model IEnumerable<prjEmpSys.Models.TEmployee>

@{
    ViewData["Title"] = "員工列表";
}

<h1>員工列表</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OnBoard)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.EmpId
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @{
                   DateTime date = DateTime.Parse(item.OnBoard.ToString());
                }
                @date.ToShortDateString()
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmpId" class="btn btn-warning">編輯</a>
                <a asp-action="Delete" asp-route-id="@item.EmpId" class="btn btn-danger" onclick="return confirm('確定要刪除 @item.EmpId 員工嗎?')">刪除</a>
            </td>
        </tr>
}
    </tbody>
</table>
